# .env.example - Copy this to .env and fill in your values

# Database Configuration
POSTGRES_USER=hackradar
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=hackradar
DATABASE_URL=postgresql://hackradar:your_secure_password_here@db:5432/hackradar

# Bot Tokens
DISCORD_TOKEN=your_discord_bot_token_here
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Telegram Channel Bot (for automated broadcasting)
TELEGRAM_CHANNEL_BOT_TOKEN=your_channel_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_username  # or -1001234567890 for private channels

# Kaggle API (Optional - for Kaggle competitions)
KAGGLE_API_TOKEN=your_kaggle_api_token_here
